                <ImageView fitHeight="544.0" fitWidth="410.0" pickOnBounds="true"
                    preserveRatio="true">
                    <image>
                        <Image url="@/images/echelle.png" />
                    </image>
                </ImageView>
                <AnchorPane fx:id="j1Pion" layoutX="95" layoutY="400">
                    <children>
                        <Circle fill="#1f93ff" layoutX="37.0" layoutY="53.0" radius="38.0"
